<%= form_for([@post, @post.comments.build]) do |form| %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :comment %>
    <%= form.text_field :comment %>
  </div>

  <div class="actions btn btn-secondary">
    <%= form.submit %>
  </div>
<% end %>
