<p id="notice"><%= notice %></p>

<h1>Posts Users</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Post</th>
      <th>Vote post</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts_users.each do |posts_user| %>
      <tr>
        <td><%= posts_user.user_id %></td>
        <td><%= posts_user.post_id %></td>
        <td><%= posts_user.vote_post %></td>
        <td><%= link_to 'Show', posts_user %></td>
        <td><%= link_to 'Edit', edit_posts_user_path(posts_user) %></td>
        <td><%= link_to 'Destroy', posts_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Posts User', new_posts_user_path %>
