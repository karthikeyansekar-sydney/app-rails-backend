<div class="users_show_left">
  <p id="notice"><%= notice %></p>


  <h5>
    <strong>Name:</strong>
    <%= @user.name %>
  </h5>
  <p>
    <strong>Email:</strong>
    <%= @user.email %>
  </p>
  <p>
    <img src="<%= @user.profile_pic %>" alt="profile_pic">
  </p>

  <div id="all-links">
    <% if @user.id == @current_user.id %>
      <%= link_to "Edit Profile", edit_user_path, method: :GET %>
    <% elsif @current_user.following.include?(@user) %>
      <h5><%= button_to "Unfollow", unfollow_user_path, method: "POST" %></h5>
    <% else %>
      <h5><%= button_to "Follow", follow_user_path, method: "POST"  %></h5>
    <% end%>
    <h3>Followers</h3>
    <% @user.followers.each do |f| %>
    <p> <%= f.name %> </p>
    <% end %>
    <br>
  </div>

  <%= link_to 'Back', users_path %>
</div>
